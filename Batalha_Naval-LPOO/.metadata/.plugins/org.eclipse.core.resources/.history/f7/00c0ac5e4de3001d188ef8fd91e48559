package upe.poli.games.GUI;

import java.awt.Color;
import java.awt.Font;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;

public class TelaDeInicio extends JFrame {
	private TelaConfigGUI configs;

    private JButton botaoIniciarJogo, botaoRanking;

    public TelaDeInicio() {
        setTitle("Batalha Naval");
        setSize(500, 400);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setLocationRelativeTo(null);

        JPanel painel = new JPanel();
        painel.setLayout(null);
        painel.setBackground(new Color(173, 216, 230));

        JLabel labelTitulo = new JLabel("Batalha Naval");
        labelTitulo.setFont(new Font("Impact", Font.BOLD, 36));
        int tituloWidth = 300;
        int tituloHeight = 30;
        int tituloX = (getWidth() - tituloWidth) / 2;
        int tituloY = 30;
        labelTitulo.setBounds(tituloX, tituloY, tituloWidth, tituloHeight);
        painel.add(labelTitulo);

        botaoIniciarJogo = new JButton("Iniciar Jogo");
        botaoIniciarJogo.setBounds(150, 150, 200, 50);
        botaoIniciarJogo.addActionListener(new ActionListener() {
            public void actionPerformed(ActionEvent e) {
            	dispose();
            	//TelaConfigGUI config = new TelaConfigGUI(TelaDeInicio.this);
                config.setVisible(true);
            }
        });
        painel.add(botaoIniciarJogo);

        botaoRanking = new JButton("Ranking");
        botaoRanking.setBounds(150, 220, 200, 50);
        botaoRanking.addActionListener(new ActionListener() {
            public void actionPerformed(ActionEvent e) {
                // 
            }
        });
        painel.add(botaoRanking);

        getContentPane().add(painel);

        setVisible(true);
    }
    public TelaConfigGUI getConfigs() {
        return configs;
    }

}
